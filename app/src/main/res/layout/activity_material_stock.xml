<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.codigoqr.materialStockActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sala"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="6dp" />

    <Spinner
        android:id="@+id/mat_stock_sp_sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/mat_stock_btn_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Consultar Stock"
        app:layout_constraintTop_toBottomOf="@+id/mat_stock_sp_sala"
        tools:layout_editor_absoluteX="6dp" />

    <ListView
        android:id="@+id/mat_stock_lv_materiales"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mat_stock_btn_consultar"
        tools:layout_editor_absoluteX="26dp"></ListView>
</android.support.constraint.ConstraintLayout>