<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </android.support.design.widget.AppBarLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_garantia"
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:text="Venta"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:padding="5dp"
                />

            <LinearLayout
                style="@style/EditTextStyleRojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ly_desc_folio"

                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rfp_Folio"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblFolio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    style="@style/SeparatorLayout_desc_folio" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rfp_Sala"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblSala"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    style="@style/SeparatorLayout_desc_folio" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="5dp"

                    >

                    <TextView
                        android:id="@+id/lblFa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rfp_Falla"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblFalla"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" />



                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    style="@style/SeparatorLayout_desc_folio" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rfp_SubFalla"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblSubFalla"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" />
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    style="@style/SeparatorLayout_desc_folio" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblLic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rfp_Licencia"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblLicencia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" />
                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    style="@style/SeparatorLayout_desc_folio" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblJu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rfp_Juego"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblJuego"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C0C0C0"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/rfp_Opciones"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/arfp_ll_actividades"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblAceptarFolio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_AceptarFolio"
                        android:textColor="@drawable/selected_state" />

                    <TextView
                        android:id="@+id/lblRechazarFolio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_RechazarFolio"
                        android:textColor="@drawable/selected_state" />

                    <TextView
                        android:id="@+id/lblTraslado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_Traslado"
                        android:textColor="@drawable/selected_state" />

                    <TextView
                        android:id="@+id/lblAcceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_Acceso"
                        android:textColor="@drawable/selected_state" />

                    <TextView
                        android:id="@+id/lblAtiende"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_Atiende"
                        android:textColor="@drawable/selected_state" />

                    <TextView
                        android:id="@+id/lblEstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_Estatus"
                        android:textColor="@drawable/selected_state" />

                    <TextView
                        android:id="@+id/lblRepara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/rfp_Repara"
                        android:textColor="@drawable/selected_state" />


                </LinearLayout>

            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/arfp_fragment_sala"
                android:background="@drawable/custom_button_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:text="@string/datos_button"
                android:textSize="14dp"
                android:visibility="gone" />
            <Button
                android:id="@+id/arfp_btn_medios"
                android:background="@drawable/custom_button_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:text="Medios"
                android:textSize="14dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/arfp_fragment_comment"
                android:background="@drawable/custom_button_menu"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/comentarios_button"
                android:textSize="14dp" />

            <Button
                android:id="@+id/arfp_btn_crear_folio"
                android:background="@drawable/custom_button_menu"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:text="Materiales"
                android:textSize="14dp"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

