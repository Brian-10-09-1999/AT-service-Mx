<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/frag_foot_id_img_open_close"
        android:src="@drawable/btn_down" />

    <View
        android:id="@+id/frag_foot_id_separator"
        android:background="#ff0900"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:paddingRight="10dp" />

    <LinearLayout
        android:id="@+id/frag_foot_id_ly_menu_opc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#999999"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/frag_foot_id_img_email"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/email1" />

        <ImageView
            android:id="@+id/frag_foot_id_img_call"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/cc" />

        <ImageView
            android:id="@+id/frag_foot_id_img_info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/scrolls"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:src="@drawable/dragon" />

    </LinearLayout>

</LinearLayout>