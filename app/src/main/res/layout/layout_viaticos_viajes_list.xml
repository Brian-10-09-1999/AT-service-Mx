<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/actividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAPACITACION SING LINK KING"
            android:textSize="18sp"
            android:textColor="#9f9f9f"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/motivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="CAPACITACION SING LINK KING"
            android:layout_weight="1"
            android:textColor="#979797"
            android:textSize="15sp" />

            <TextView
                android:id="@+id/num_sol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="  8312  "
                android:textSize="13sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ico_origen" />

            <TextView
                android:id="@+id/origen"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textColor="@color/text_secundario"
                android:text="QUERETARO         "
                android:textSize="14sp" />




            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ico_destino" />

            <TextView
                android:id="@+id/destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secundario"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="CDMX"
                android:textSize="14sp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:layout_weight="0"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/ico_inicio" />

            <TextView
                android:id="@+id/inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="inicio"

                android:textColor="@color/text_secundario"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_weight="0"
                android:paddingBottom="3dp"
                app:srcCompat="@drawable/ico_termina" />

            <TextView
                android:id="@+id/termina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="termina"
                android:paddingLeft="4dp"
                android:textColor="@color/text_secundario"
                android:textSize="13sp" />
        </LinearLayout>




    </LinearLayout>

</LinearLayout>