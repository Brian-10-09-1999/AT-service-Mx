<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">


            <TextView
                android:id="@+id/tv_subsala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subsala: "
                android:textColor="#616161"
                android:layout_weight="0"
                android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Spinner
                android:id="@+id/sp_rack_subsala"
                android:textSize="10sp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/fondo_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="28dp" />

            <Spinner
                android:id="@+id/sp_rack_subsala2"
                android:textSize="10sp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/fondo_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="28dp" />

            <ImageView
                android:id="@+id/img_row_status"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0"
                android:contentDescription="iimagen  ff"
                android:src="@drawable/icon_no_ok" />



        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>