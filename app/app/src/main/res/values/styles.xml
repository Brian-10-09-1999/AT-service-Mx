<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"/>
    <style name="AT_Serivice" parent="@android:style/Theme.NoTitleBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@color/window_color_act</item>

    </style>


    <style name="Widget"/>
    
    <style name="Widget.ProgressBar">
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Widget.ProgressBar.Vertical">
        <item name="android:background">@drawable/fondo_bar</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_vertical</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>

    <style name ="SpinnerStyleGris">
        <item name= "android:background">@drawable/spinner_style</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name ="ButtonStyleGris">
        <item name= "android:background">@drawable/rectangle_gris</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name ="ButtonStyleGrisDetails">
        <item name= "android:background">@drawable/rectangle_gris</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name ="ButtonStyleBronce">
        <item name= "android:background">@drawable/rectangle_bronce</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name ="ButtonStyleRojo">
        <item name= "android:background">@drawable/rectangle_rojo</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name ="ButtonStyleAtardecer">
        <item name= "android:background">@drawable/rectangle_atardecer</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name ="ButtonStyleYellow">
        <item name= "android:background">@drawable/rectangle_yellow</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextStyle" >
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="EditTextStyleTranslucido" >
        <item name="android:background">@drawable/rectangle_transp_black</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="EditTextStyleCafe" >
        <item name="android:background">@drawable/edit_cafe</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EditTextStyleRojo" >
        <item name="android:background">@drawable/edit_rojo</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="EditTextStyleGris" >
        <item name="android:background">@drawable/edit_gris</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="SeparatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#DC143C</item>
    </style>
    
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#DC143C</item>
    </style>
    
    <style name="LayoutStyle" >
        <item name="android:background">@drawable/layout_rectangle</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="Invisible" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="CasiInvisible" parent="@android:style/Theme.NoTitleBar">
        <!-- <item name="android:windowBackground">@android:color/transparent</item> -->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="NoTitleBar" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--matreial desing-->


    <style name="ActivityStyleMaterial" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/window_color_act</item>
        <item name="android:textColorPrimary">@color/text_color_act</item>
        <!--<item name="colorAccent">@color/accent_act</item>-->
        <!--  <item name="android:actionMenuTextColor">@color/menu_color</item>-->
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="activityNoActionbar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@color/window_color_act</item>
        <item name="android:textColorPrimary">@color/text_color_act</item>

        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--  <item name="android:actionMenuTextColor">@color/menu_color</item>-->
    </style>

    <style name="ChatNoActionbar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@color/window_color_act</item>
        <item name="android:textColorPrimary">@color/text_color_act</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkChat</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--  <item name="android:actionMenuTextColor">@color/menu_color</item>-->
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeFullscreen" parent="activityNoActionbar">
        <item name="android:windowFullscreen">true</item>
    </style>



</resources>

