<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/frag_body_id_sv_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/frag_body_id_ly_cont_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="6">

            <Button
                android:id="@+id/frag_body_id_btn_folios_pendientes"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/foliopend"
                android:text="@string/foliosPendientes"
                android:textStyle="bold" />

            <Button
                android:id="@+id/frag_body_id_btn_materiales"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/devmaterial"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="@string/materiales"
                android:textStyle="bold" />


            <Button
                android:id="@+id/frag_body_id_btn_pedidos"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/pedido"
                android:text="@string/pedidos"
                android:textStyle="bold" />

            <Button
                android:id="@+id/frag_body_id_btn_os_asignadas"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/reportedev"
                android:text="@string/osAsignadas"
                android:textStyle="bold" />

            <Button
                android:id="@+id/frag_body_id_btn_devolver_memorias"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/reportedev"
                android:text="@string/DevolverMemorias"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/frag_body_create_folio"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/foliopend"
                android:text="Crear folio"
                android:textStyle="bold"
                android:visibility="visible" />



            <Button
                android:id="@+id/frag_body_id_btn_chat"
                style="@style/ButtonStyleGris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/sym_action_chat"
                android:text="Chat"
                android:textStyle="bold"
                android:visibility="visible" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>