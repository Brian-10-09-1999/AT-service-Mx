<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LayoutStyle"
		android:layout_margin="10dp"
        android:orientation="vertical">
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtSalida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Salida: " />
        <TextView
        android:id="@+id/tvSalidaMem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    </LinearLayout>
        <View
        android:id="@+id/view1"
        style="@style/SeparatorLayout"/>

        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Fecha: " />
        <TextView
        android:id="@+id/tvFechaMem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
        <View
        style="@style/SeparatorLayout"/>
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Hora: " />
        <TextView
        android:id="@+id/tvHoraMem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
    	<View
        style="@style/SeparatorLayout"/>
    	
    	        <LinearLayout 
    	            android:id="@+id/layoutStatusMemorias"
    	            android:background="#C0C0C0"
    	            android:layout_marginLeft="2dp"
    	            android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Estatus: " />
        <TextView
        android:id="@+id/tvStatusMem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
    	<View
        style="@style/SeparatorLayout"/>
                     <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="#00FFFF" >

                     <TextView
                         android:id="@+id/textView5"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1.5"
                         android:textStyle="bold"
                         android:textSize="13sp"
                         android:gravity="center_horizontal"
                         android:text="@string/TIPO" />

                     <TextView
                         android:id="@+id/textView6"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:textStyle="bold"
                         android:textSize="13sp"
                         android:gravity="center_horizontal"
                         android:text="@string/FOLIO" />

                     <TextView
                         android:id="@+id/textView7"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:textStyle="bold"
                         android:textSize="13sp"
                         android:gravity="center_horizontal"
                         android:text="@string/OS" />

                     <TextView
                         android:id="@+id/textView8"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:textStyle="bold"
                         android:gravity="center_horizontal"
                         android:textSize="13sp"
                         android:text="@string/CANTIDAD" />

                 </LinearLayout>
                 <View
        			style="@style/SeparatorLayout"/>
                 
                     <ListView
        			android:id="@+id/listaReportesMemorias"
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content" 
        			android:divider="#00FFFF"
        			android:dividerHeight="2dp">
    				</ListView>
  </LinearLayout>
  
</LinearLayout>
