<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/etBusquedaTecnico"
            style="@style/EditTextStyleRojo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.00"
            android:ems="10"
            android:hint="@string/hintBusqueda"
            android:imeOptions="actionSearch"
            android:inputType="text">

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/imgbtnBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#AA000000"
            android:src="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spnRegionBusqueda"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp" />

        <ListView
            android:id="@+id/lvBusquedaTecnico"
            style="@style/EditTextStyleRojo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:divider="#DC143C"
            android:dividerHeight="2dp">

        </ListView>


        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:text="@string/infoDialogoBusqueda" />

    </LinearLayout>


</LinearLayout>
