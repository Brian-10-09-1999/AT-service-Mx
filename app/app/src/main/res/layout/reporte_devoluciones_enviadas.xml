<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextStyleRojo"
		android:layout_margin="10dp"
        android:orientation="vertical">
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtSala"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Sala: " />
        <TextView
        android:id="@+id/tvSalaDev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    </LinearLayout>
        <View
        android:id="@+id/view1"
        style="@style/SeparatorLayout"/>
                
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtDv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Id: " />
        <TextView
        android:id="@+id/tvIdDev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
        <View
        style="@style/SeparatorLayout"/>
        
        <LinearLayout 
        android:id="@+id/layoutFolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtFolio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Folio: " />
        <TextView
        android:id="@+id/tvFolioDev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
        <View
        style="@style/SeparatorLayout"/>
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Fecha: " />
        <TextView
        android:id="@+id/tvFechaDev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
        <View
        style="@style/SeparatorLayout"/>
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">                    
        <TextView
        android:id="@+id/txtHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Hora: " />
        <TextView
        android:id="@+id/tvHoraDev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="TextView" />
    	</LinearLayout>
        <View
            style="@style/SeparatorLayout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtEstatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Estatus: " />

            <TextView
                android:id="@+id/tvEstatusDev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="TextView" />
        </LinearLayout>

        <View
        style="@style/SeparatorLayout"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_rep_dev_sv">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:padding="5dp"
                             android:background="#c0c0c0" >

                             <TextView
                                 android:id="@+id/textView5"
                                 android:layout_width="100dp"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:textSize="12.5sp"
                                 android:gravity="center_horizontal"
                                 android:text="@string/CODIGO" />

                             <TextView
                                 android:id="@+id/textView6"
                                 android:layout_width="150dp"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:textSize="12.5sp"
                                 android:gravity="center_horizontal"
                                 android:text="@string/DESCRIPCION" />

                             <TextView
                                 android:id="@+id/textView7"
                                 android:layout_width="100dp"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:textSize="12.5sp"
                                 android:gravity="center_horizontal"
                                 android:text="@string/CANTIDAD" />

                             <TextView
                                 android:id="@+id/textView8"
                                 android:layout_width="100dp"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:gravity="center_horizontal"
                                 android:textSize="12.5sp"
                                 android:text="@string/SERIE" />

                             <TextView
                                 android:id="@+id/textView9"
                                 android:layout_width="100dp"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:gravity="center_horizontal"
                                 android:textSize="12.5sp"
                                 android:text="@string/ESTATUS" />
                         </LinearLayout>

                <View
                            style="@style/SeparatorLayout"/>

                <ListView
                            android:id="@+id/listaReportes"
                            android:layout_width="550dp"
                            android:layout_height="match_parent"
                            android:divider="#DC143C"
                            android:dividerHeight="2dp">
                            </ListView>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
  
    



</LinearLayout>
