<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/the_menu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="5dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="20dp"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/menu1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="@drawable/main_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mc_ib_imagen"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:onClick="menuClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_image_material"
                android:tag="Imagen" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Imagen" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="@drawable/main_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mc_ib_take_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:onClick="menuClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_camera_material"
                android:tag="Saudi" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Tomar foto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="@drawable/main_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mc_ib_clear_chat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:onClick="menuClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_clear_material"
                android:tag="Turkey" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Limpiar chat" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>